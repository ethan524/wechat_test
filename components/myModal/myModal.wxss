.myModal{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}
.content_view{
  width:560rpx;
  min-height:280rpx;
  background: white;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
}
.title{
  color:#000000;
  font-size:36rpx;
  font-weight: bolder;
  margin-top:50rpx;
  margin-bottom: 18rpx;
  display: flex;
  justify-content: center;
}
.content_text{
  color:#888888;
  font-size:30rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.btn{
  width: 100%;
  height:100rpx;
  border-top:2rpx solid #E5E5E5;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#367CFF;
}