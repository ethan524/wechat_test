.logo_robot{
  width: 100%;
  height:244rpx;
  display: flex;
  justify-content: center;
  margin-top:180rpx;
}
.logo_robot image{
  width: 244rpx;
  height: 244rpx;
}
.logo_text{
  text-align: center;
  color: white;
  width: 100%;
  font-size:28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.introduce{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  font-size:28rpx;
  color:#43979F;
  margin-top:102rpx;
}
.middle_line{
  margin:-2rpx 20rpx 0rpx;
}
.v_line{
  width:664rpx;
  border:2rpx solid;
  border-image:linear-gradient(270deg, rgba(255,255,255,0), rgba(0,231,255,1), rgba(255,255,255,0)) 1 1;
}
.verison{
  display: flex;
  width: 100%;
  height: 52rpx;
  justify-content: center;
  color:#0FF7EF;
  margin-top:18rpx;
}
.exercise_btn{
  width: 100%;
  display: flex;
  justify-content: center;
  height: 94rpx;
  margin-top:68rpx;
}
.exercise_btn button{
  width:484rpx;
  height: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #4DDEFF;
  color:#222627;
  border-radius: 50rpx;
}
.platform,.copyright{
  display: flex;
  justify-content: center;
  width: 100%;
  font-size:11px;
  color:#5D5D5D;
  margin-top: 38rpx;
  height:28rpx;
}
.copyright{
  height:20rpx;
  margin-top: 10rpx;
  font-size:20rpx;
  line-height: 10rpx;
}