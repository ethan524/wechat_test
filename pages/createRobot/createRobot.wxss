.ipt_title{
  display: flex;
  color:#888888;
  font-size:28rpx;
  margin-top:32rpx;
  margin-bottom:16rpx;
  text-indent: 30rpx;
}
.ipt_lines{
  display: flex;
  flex-direction: row;
  width: 100%;
  height:88rpx;
  background: #FFFFFF;
  text-indent: 30rpx;
  align-items: center;
}
.ipt_names{
  color:#000000;
  font-size:34rpx;
  font-weight: bolder;
  display: flex;
  justify-content: flex-start;
  line-height: 88rpx;
  align-items: center;
}
.ipt_input{
  display: flex;
  margin-left: 44rpx;
  width: 65%;
  text-indent: 0rpx;
  color:#000000;
  font-size:32rpx;
  /* margin-top:-2rpx; */
}
.url_address{
  height: auto;
  align-items: flex-start;
}
.create_about{
  width: 32rpx;
  height: 32rpx;
}

.textarea_lines{
  width: 100%;
  height:336rpx;
  display: flex;
  background:#FFFFFF;
  padding-top:30rpx;
}
.aera_names{
  color:#000000;
  font-size:34rpx;
  font-weight: bolder;
  text-indent: 30rpx;
}
.textarea_view{
  margin:0rpx;
  margin-left: 40rpx;
  width: 65%;
  height:336rpx;
  position: relative;
}
.textarea_view textarea{
  position: absolute;
  width: 98%;
  height:336rpx;
  font-size:34rpx;
}
.textarea_lines .create_about{
  margin-top:9rpx;
}
.require_view{
  display: flex;
  color:#888888;
  font-size:28rpx;
  margin-top:24rpx;
  margin-bottom:18rpx;
  height: auto;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}
.requie_title{
  color:#4A4A4A;
  font-size:32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-indent: 30rpx;
}
.require_view image{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}
.require_text{
  color:#888888;
  font-size:28rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.alread_read_view{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  margin-top: 34rpx;
}
.alread_read_view .checkbox .wx-checkbox-input{
  display: flex;
  align-items: center;
  width:24rpx;
  height:24rpx;
  margin-left:30rpx;
}
.checkbox_text{
  font-size:26rpx;
  color:#9B9B9B;
  margin-top:8rpx;
}
.next_view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.next_btn{
  display: flex;
  width: 670rpx;
  height:94rpx;
  color:#FFFFFF;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  border-radius: 48rpx;
  margin-top:40rpx;
}
.footer_text{
  text-align: center;
  color:#B2B2B2;
  font-size:20rpx;
  margin-top:100rpx;
}