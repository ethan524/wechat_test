.title{
  background: #ECECEC;
  color:#A8B0B4;
  font-size:22rpx;
  display: flex;
  margin: 32rpx auto 26rpx;
  width:428rpx;
  height:38rpx;
  border-radius: 18rpx;
  justify-content: center;
  align-items: center;
}
.lines{
  display: flex;
  width: 100%;
  height: auto;
  flex-direction: row;
  margin-bottom: 28rpx;
}
.robot_img{
  width:74rpx;
  height: 74rpx;
  margin-left:18rpx;
}
.user_img{
  width:74rpx;
  height: 74rpx;
  margin-right: 18rpx;
}
.robot_img image,.user_img image{
  width:74rpx;
  height: 74rpx;
}

.robot_words{
  max-width:488rpx;
  height: auto;
  padding:10rpx 16rpx 12rpx 12rpx;
  background: #FFFFFF;
  font-size:28rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
  color:#4F4F4F;
  position: relative;
}
.robot_words:before{
  position: absolute;
  content: "";
  top: 20rpx;
  left: -10rpx;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-right: 12rpx solid #FFFFFF;
}

.user_lines{
  justify-content:flex-end;
}
.user_words{
  max-width:488rpx;
  height: auto;
  padding:10rpx 16rpx 12rpx 12rpx;
  background: #367CFF;
  color:#FFFFFF;
  font-size:28rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  position: relative;
}

.user_words:before{
  position: absolute;
  content: "";
  top: 20rpx;
  right: -10rpx;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid #367CFF;
}

