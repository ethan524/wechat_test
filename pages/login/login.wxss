/* pages/login/login.wxss */
.logo_view{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:430rpx;
}
.logo_view image{
  display: flex;
  width:240rpx;
  height:240rpx;
}
.line{
  width: 85%;
  height:2rpx;
  background: #CDCDCD;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0rpx auto;
  margin-bottom: 90rpx;
}
.title{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  color:black;
  font-size:40rpx;
}
.auth_list{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  color:#9E9E9E;
  font-size:30rpx;
  margin-top:30rpx;
}
.btn_view{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.btn_view button{
  width:80%;
  background: #13AE12;
  color:white;
  border-radius: 60rpx;
  margin-top: 60rpx;
}
.wxUpdate{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size:36rpx;
  height:50%;
}
button::after{
    border:none;
}